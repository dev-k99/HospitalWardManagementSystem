@model WardSystemProject.Models.Room

@{
    ViewData["Title"] = "Room Details";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-primary">
                <i class="bi bi-door-open"></i> Room Details: @Model.RoomNumber
            </h2>
            <p class="text-muted">View basic information about this room</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="ManageRooms" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Rooms List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Room Information
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">Room Number</dt>
                        <dd class="col-sm-8">@Model.RoomNumber</dd>

                        <dt class="col-sm-4 fw-bold">Ward</dt>
                        <dd class="col-sm-8">
                            @if (Model.Ward != null)
                            {
                                <span>@Model.Ward.Name</span>
                            }
                            else
                            {
                                <em class="text-muted">No ward assigned</em>
                            }
                        </dd>

                        <dt class="col-sm-4 fw-bold">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </dd>

                        <dt class="col-sm-4 fw-bold">Total Beds</dt>
                        <dd class="col-sm-8">
                            @(Model.Beds?.Count ?? 0)
                        </dd>
                    </dl>

                    <hr />

                    <div class="mt-3">
                        <a asp-action="EditRoom" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit Room
                        </a>
                        <a asp-action="ManageRooms" class="btn btn-secondary ms-2">
                            <i class="bi bi-list"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>

            <div class="alert alert-info mt-4">
                <i class="bi bi-lightbulb"></i>
                <strong>Tip:</strong> To manage beds in this room, go to the Beds management section and filter by room.
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <a asp-action="EditRoom" asp-route-id="@Model.Id" class="btn btn-warning btn-sm w-100 mb-2">
                        <i class="bi bi-pencil"></i> Edit This Room
                    </a>
                    <a asp-action="CreateBed" class="btn btn-success btn-sm w-100 mb-2">
                        <i class="bi bi-plus-circle"></i> Add New Bed
                    </a>
                    <hr />
                    <p class="small text-muted">
                        Rooms group beds within a ward for better organization.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>