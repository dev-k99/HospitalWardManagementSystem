@model IEnumerable<WardSystemProject.Models.Ward>

@{
    ViewData["Title"] = "Manage Wards";
}

<style>
    /* Premium Ward Management Styles - Matching Dashboard */
    :root {
        --primary-blue: #0D6EFD;
        --success-green: #10B981;
        --warning-orange: #F59E0B;
        --danger-red: #EF4444;
        --neutral-gray: #6B7280;
        --light-gray: #F9FAFB;
        --border-gray: #E5E7EB;
        --text-dark: #1F2937;
        --text-muted: #9CA3AF;
    }

    body {
        background-color: #FFFFFF;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        color: var(--text-dark);
    }

    .page-header {
        background-color: #FFFFFF;
        border-bottom: 1px solid var(--border-gray);
        padding: 1.5rem 0 1.5rem 0;
        margin-bottom: 2rem;
    }

        .page-header h2 {
            font-size: 1.875rem;
            font-weight: 600;
            color: var(--text-dark);
            margin: 0;
        }

    .btn-custom {
        padding: 0.625rem 1.25rem;
        border-radius: 8px;
        font-weight: 500;
        font-size: 0.9rem;
        transition: all 0.2s ease;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-primary-custom {
        background-color: var(--primary-blue);
        color: white;
    }

        .btn-primary-custom:hover {
            background-color: #0B5ED7;
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
        }

    .btn-success-custom {
        background-color: var(--success-green);
        color: white;
    }

        .btn-success-custom:hover {
            background-color: #059669;
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        }

    .btn-outline-custom {
        background-color: white;
        border: 1px solid var(--border-gray);
        color: var(--text-dark);
    }

        .btn-outline-custom:hover {
            background-color: var(--light-gray);
            border-color: var(--primary-blue);
            color: var(--text-dark);
        }

    .btn-sm-custom {
        padding: 0.375rem 0.875rem;
        font-size: 0.8125rem;
    }

    .section-card {
        background: #FFFFFF;
        border: 1px solid var(--border-gray);
        border-radius: 12px;
        margin-bottom: 1.5rem;
        overflow: hidden;
    }

        .section-card .card-body {
            padding: 1.5rem;
        }

    .search-box {
        position: relative;
    }

        .search-box .form-control {
            border: 1px solid var(--border-gray);
            border-radius: 8px;
            padding: 0.75rem 1rem;
            font-size: 0.9375rem;
            transition: all 0.2s ease;
        }

            .search-box .form-control:focus {
                border-color: var(--primary-blue);
                box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.1);
                outline: none;
            }

        .search-box .btn {
            border-radius: 8px;
        }

    .table-custom {
        width: 100%;
        margin: 0;
    }

        .table-custom thead th {
            background-color: var(--light-gray);
            color: var(--text-muted);
            font-weight: 600;
            font-size: 0.8125rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            padding: 1rem;
            border-bottom: 1px solid var(--border-gray);
            border-top: none;
        }

        .table-custom tbody td {
            padding: 1rem;
            vertical-align: middle;
            border-bottom: 1px solid var(--border-gray);
            color: var(--text-dark);
            font-size: 0.9375rem;
        }

        .table-custom tbody tr {
            transition: background-color 0.2s ease;
        }

            .table-custom tbody tr:hover {
                background-color: var(--light-gray);
            }

    .badge-custom {
        padding: 0.375rem 0.75rem;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.75rem;
        display: inline-block;
    }

    .badge-info-custom {
        background-color: #EFF6FF;
        color: var(--primary-blue);
    }

    .alert-custom {
        background-color: #EFF6FF;
        border: 1px solid #BFDBFE;
        border-radius: 8px;
        padding: 1rem 1.25rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: var(--text-dark);
    }

        .alert-custom i {
            font-size: 1.25rem;
            color: var(--primary-blue);
        }

        .alert-custom a {
            color: var(--primary-blue);
            font-weight: 500;
            text-decoration: none;
        }

            .alert-custom a:hover {
                text-decoration: underline;
            }

    .btn-group-custom {
        display: inline-flex;
        gap: 0.375rem;
    }

    .btn-action {
        padding: 0.375rem 0.625rem;
        border-radius: 6px;
        border: 1px solid var(--border-gray);
        background-color: white;
        color: var(--text-dark);
        transition: all 0.2s ease;
        cursor: pointer;
        font-size: 0.875rem;
    }

        .btn-action:hover {
            background-color: var(--light-gray);
            border-color: var(--primary-blue);
        }

        .btn-action.btn-action-primary:hover {
            background-color: var(--primary-blue);
            color: white;
            border-color: var(--primary-blue);
        }

        .btn-action.btn-action-info:hover {
            background-color: #3B82F6;
            color: white;
            border-color: #3B82F6;
        }

        .btn-action.btn-action-danger:hover {
            background-color: var(--danger-red);
            color: white;
            border-color: var(--danger-red);
        }

    .text-muted-custom {
        color: var(--text-muted);
        font-style: italic;
    }

    .table-responsive {
        border-radius: 0;
    }
</style>

<div class="container mt-4">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2>Manage Wards</h2>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="CreateWard" class="btn btn-success-custom">
                    <i class="bi bi-plus-circle"></i> Create New Ward
                </a>
            </div>
        </div>
    </div>

    <!-- Search Form -->
    <div class="section-card">
        <div class="card-body">
            <form asp-action="Search" method="get">
                <div class="search-box">
                    <div class="input-group">
                        <input type="text" name="query" class="form-control" placeholder="Search by ward name or description..." />
                        <button type="submit" class="btn btn-primary-custom">
                            <i class="bi bi-search"></i> Search
                        </button>
                        <a asp-action="Index" class="btn btn-outline-custom">Clear</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Wards List -->
    @if (!Model.Any())
    {
        <div class="alert-custom">
            <i class="bi bi-info-circle"></i>
            <span>No wards found. <a asp-action="CreateWard">Create the first ward</a></span>
        </div>
    }
    else
    {
        <div class="section-card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table-custom">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Ward Name</th>
                                <th>Description</th>
                                <th>Rooms Count</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>
                                        <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            @Html.DisplayFor(modelItem => item.Description)
                                        }
                                        else
                                        {
                                            <span class="text-muted-custom">No description</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge-custom badge-info-custom">
                                            @(item.Rooms?.Count ?? 0) rooms
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group-custom">
                                            <a asp-action="EditWard" asp-route-id="@item.Id"
                                               class="btn-action btn-action-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="DetailsWard" asp-route-id="@item.Id"
                                               class="btn-action btn-action-info" title="Details">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                            <form asp-action="SoftDeleteWard" method="post" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn-action btn-action-danger"
                                                        onclick="return confirm('Are you sure you want to delete this ward?');"
                                                        title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-submit search form when user types
        $(document).ready(function() {
            $('input[name="query"]').on('keyup', function() {
                if ($(this).val().length >= 2) {
                    $(this).closest('form').submit();
                }
            });
        });
    </script>
}
