<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WardCare+ System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/premium-design-system.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <style>
        /* Custom sidebar styles to ensure full height and scrolling */
        body {
            min-height: 100vh;
            overflow: hidden; /* Prevent double scrollbars */
        }

        .sidebar {
            width: 280px;
            height: 100vh;
            position: sticky;
            top: 0;
            overflow-y: auto; /* Scrollable sidebar if menu is long */
        }

        .content-wrapper {
            height: 100vh;
            overflow-y: auto; /* Scrollable main content */
            width: 100%;
        }
        /* Update nav link colors for the blue sidebar */
        .sidebar .nav-link {
            color: rgba(255, 255, 255, .85);
        }

            .sidebar .nav-link:hover, .sidebar .nav-link.active {
                color: #fff;
                background-color: rgba(255, 255, 255, 0.1);
            }
    </style>
</head>
<body>

    <div class="d-flex">

        <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-primary sidebar">
            <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none"
               asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-hospital fs-4 me-2"></i>
                <span class="fs-4 fw-bold">Ward System</span>
            </a>
            <hr>

            <ul class="nav nav-pills flex-column mb-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-speedometer2 me-2"></i> Dashboard
                        </a>
                    </li>

                    @if (User.IsInRole("Administrator"))
                    {
                        <li class="nav-item mt-3 text-uppercase small text-white-50 fw-bold">Administration</li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Administration" asp-action="ManageWards">Ward Management</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="RoomManagement" asp-action="ManageRooms">Room Management</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="BedManagement" asp-action="Index">Bed Management</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Administration" asp-action="ManageStaff">Staff Management</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Administration" asp-action="ManageMedications">Medication Management</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Administration" asp-action="ManageAllergies">Allergy Management</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Administration" asp-action="ManageMedicalConditions">Medical Conditions</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="FAQs">FAQs</a></li>
                    }

                    @if (User.IsInRole("Ward Admin"))
                    {
                        <li class="nav-item mt-3 text-uppercase small text-white-50 fw-bold">Ward Admin</li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PatientManagement" asp-action="Index">Patient Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="FAQs">FAQs</a>
                        </li>
                    }

                    @if (User.IsInRole("Nurse") || User.IsInRole("Nursing Sister"))
                    {
                        <li class="nav-item mt-3 text-uppercase small text-white-50 fw-bold">Nursing</li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PatientCare" asp-action="Index">Patient Care</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="FAQs">FAQs</a>
                        </li>
                    }

                    @if (User.IsInRole("Doctor"))
                    {
                        <li class="nav-item mt-3 text-uppercase small text-white-50 fw-bold">Doctor</li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="DoctorPatient" asp-action="Index">Doctor-Patient</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="FAQs">FAQs</a>
                        </li>
                    }

                    @if (User.IsInRole("Script Manager") || User.IsInRole("Consumables Manager"))
                    {
                        <li class="nav-item mt-3 text-uppercase small text-white-50 fw-bold">Inventory</li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ConsumableScript" asp-action="Index">Consumables & Scripts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="FAQs">FAQs</a>
                        </li>
                    }
                }
            </ul>

            <hr>

            @if (User.Identity.IsAuthenticated)
            {
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle fs-4 me-2"></i>
                        <strong>@User.Identity.Name</strong>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                        <li>
                            <span class="dropdown-item-text">
                                <i class="bi bi-person-badge me-2"></i>
                                @if (User.IsInRole("Administrator"))
                                {
                                    <span class="badge bg-primary">Administrator</span>
                                }
                                else if (User.IsInRole("Ward Admin"))
                                {

                                    <span class="badge bg-success">Ward Admin</span>
                                }
                                else if (User.IsInRole("Doctor"))
                                {

                                    <span class="badge bg-info">Doctor</span>
                                }
                                else if (User.IsInRole("Nurse"))
                                {

                                    <span class="badge bg-warning">Nurse</span>
                                }
                                else if (User.IsInRole("Nursing Sister"))
                                {

                                    <span class="badge bg-warning">Nursing Sister</span>
                                }
                                else if (User.IsInRole("Script Manager"))
                                {

                                    <span class="badge bg-danger">Script Manager</span>
                                }
                                else if (User.IsInRole("Consumables Manager"))
                                {

                                    <span class="badge bg-secondary">Consumables Manager</span>
                                }
                            </span>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="Accounts" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="bi bi-box-arrow-left me-2"></i> Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <div class="mt-auto">
                    <a class="btn btn-light w-100 text-primary" asp-controller="Accounts" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Login
                    </a>
                </div>
            }
        </div>

        <div class="content-wrapper d-flex flex-column bg-light">

            <div class="container-fluid p-4">

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                        <i class="bi bi-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <main role="main">
                    @RenderBody()
                </main>
            </div>

            <footer class="mt-auto border-top footer text-muted bg-white">
                <div class="container-fluid text-center py-3">
                    &copy; @DateTime.Now.Year - Ward System Project
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function() {
            setTimeout(function() { $('.alert-success').fadeOut('slow'); }, 5000);
            setTimeout(function() { $('.alert-danger').fadeOut('slow'); }, 8000);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>