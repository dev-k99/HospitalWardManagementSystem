@model WardSystemProject.Models.Room

@{
    ViewData["Title"] = "Room Details";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header  d-flex justify-content-between align-items-center rounded-top-4">
            <h3 class="mb-0">Room Details</h3>
            <a asp-action="Index" class="btn btn-light btn-sm">Back to List</a>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Room Number</dt>
                <dd class="col-sm-9">@Model.RoomNumber</dd>

                <dt class="col-sm-3">Ward</dt>
                <dd class="col-sm-9">@Model.Ward?.Name</dd>

                <dt class="col-sm-3">Ward ID</dt>
                <dd class="col-sm-9">@Model.WardId</dd>

                <dt class="col-sm-3">Active</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </dd>

                <dt class="col-sm-3">Number of Beds</dt>
                <dd class="col-sm-9">
                    @Model.Beds?.Count() ?? 0
                </dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-end gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </a>
        </div>
    </div>
    @if (Model.Beds != null && Model.Beds.Any())
    {
        <h5 class="mt-4">Beds in this Room</h5>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Bed Number</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bed in Model.Beds)
                {
                    <tr>
                        <td>@bed.BedNumber</td>
                        <td>
                            @(bed.IsActive ? "true" : "Available")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted mt-4">No beds are assigned to this room yet.</p>
    }
</div>
