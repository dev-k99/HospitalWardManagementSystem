@model IEnumerable<WardSystemProject.Models.MedicalCondition>

@{
    ViewData["Title"] = "Manage Medical Conditions";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-heart-pulse"></i> Manage Conditions
                    </h4>
                    <a asp-action="CreateMedicalCondition" class="btn btn-light">
                        <i class="bi bi-plus-circle"></i> Add New Condition
                    </a>
                </div>
                <form asp-action="Search" method="get">
                    <div class="input-group">
                        <input type="text" name="query" class="form-control" placeholder="Search by condition..." />
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="bi bi-search"></i> Search
                        </button>
                        <a asp-action="ManageMedicalConditions" class="btn btn-outline-secondary">Clear</a>
                    </div>
                </form>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-heart-pulse text-muted" style="font-size: 3rem;"></i>
                            <h5 class="text-muted mt-3">No medical conditions recorded</h5>
                            <p class="text-muted">Start by adding the first medical condition to the system.</p>
                            <a asp-action="CreateMedicalCondition" class="btn btn-info">
                                <i class="bi bi-plus-circle"></i> Add First Condition
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="">
                                    <tr>
                                        <th>Patient</th>
                                        <th>@Html.DisplayNameFor(model => model.ConditionName)</th>
                                        <th>Status</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@Html.DisplayFor(modelItem => item.Patient.FirstName) @Html.DisplayFor(modelItem => item.Patient.LastName)</strong>
                                                <br />
                                                <small class="text-muted">ID: @item.PatientId</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-info text-white">@Html.DisplayFor(modelItem => item.ConditionName)</span>
                                            </td>
                                            <td>
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="EditMedicalCondition" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </a>
                                                    <a asp-action="DeleteMedicalCondition" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 