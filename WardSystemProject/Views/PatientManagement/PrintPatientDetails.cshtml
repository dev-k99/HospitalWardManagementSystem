@model WardSystemProject.Models.Patient
@{
    ViewData["Title"] = "Patient Details";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        @@media print {
            .no-print { display: none; }
            .container { width: 100%; max-width: none; }
            .card { box-shadow: none; border: none; }
            .page-break { page-break-before: always; }
        }
        .header-logo { max-width: 150px; }
        .bordered-section { border: 1px solid #dee2e6; padding: 15px; border-radius: 5px; }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row mb-4 no-print">
            <div class="col-md-8">
                <h2 class="text-primary"><i class="bi bi-file-earmark-text"></i> Patient Details</h2>
                <p class="text-muted">Printable patient admission details</p>
            </div>
            <div class="col-md-4 text-end">
                <button onclick="window.print()" class="btn btn-primary me-2"><i class="bi bi-printer"></i> Print</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to Patients</a>
            </div>
        </div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success no-print" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <div class="card shadow-sm">
            <div class="card-header ">
                <div class="d-flex align-items-center">
                    <img src="/images/hospital-logo.png" alt="Hospital Logo" class="header-logo me-3">
                    <h5 class="mb-0">Patient Admission Record</h5>
                </div>
            </div>
            <div class="card-body">
                <div class="bordered-section mb-4">
                    <h6 class="text-primary"><i class="bi bi-person"></i> Personal Information</h6>
                    <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
                    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("yyyy-MM-dd")</p>
                    <p><strong>Gender:</strong> @Model.Gender</p>
                    <p><strong>Contact Number:</strong> @(Model.ContactNumber ?? "N/A")</p>
                    <p><strong>Address:</strong> @(Model.Address ?? "N/A")</p>
                    <p><strong>Emergency Contact:</strong> @(Model.EmergencyContact ?? "N/A") (@(Model.EmergencyContactNumber ?? "N/A"))</p>
                    <p><strong>Next of Kin:</strong> @(Model.NextOfKin ?? "N/A") (@(Model.NextOfKinContact ?? "N/A"))</p>
                </div>
                <div class="bordered-section mb-4">
                    <h6 class="text-primary"><i class="bi bi-hospital"></i> Admission Details</h6>
                   @*  <p><strong>Admission Date:</strong> @Model.AdmissionDate.ToString("yyyy-MM-dd HH:mm")</p> *@
                    <p><strong>Admission Reason:</strong> @(Model.AdmissionReason ?? "N/A")</p>
                    <p><strong>Patient Status:</strong> @Model.PatientStatus</p>
                </div>
                <div class="bordered-section mb-4">
                    <h6 class="text-primary"><i class="bi bi-heart-pulse"></i> Medical Information</h6>
                    <p><strong>Blood Type:</strong> @(Model.BloodType ?? "N/A")</p>
                    <p><strong>Chronic Medications:</strong> @(Model.ChronicMedications ?? "N/A")</p>
                    <p><strong>Medical History:</strong> @(Model.MedicalHistory ?? "N/A")</p>
                    <p><strong>Allergies:</strong> @(Model.Allergies ?? "N/A")</p>
                </div>
                <div class="bordered-section">
                    <h6 class="text-primary"><i class="bi bi-building"></i> Assignments</h6>
                    <p><strong>Ward:</strong> @(Model.Ward?.Name ?? "N/A")</p>
                    <p><strong>Bed:</strong> @(Model.Bed?.BedNumber ?? "N/A")</p>
                    <p><strong>Assigned Doctor:</strong> @(Model.AssignedDoctor?.FullName ?? "N/A")</p>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                $(".alert-success").show();
                setTimeout(function() { $(".alert-success").fadeOut(); }, 5000);
                </text>
            }
        });
    </script>
</body>
</html>
