@model IEnumerable<WardSystemProject.Models.Patient>

@{
    ViewData["Title"] = "Manage patient";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-md-8">
                <h2 class="text-primary"><i class="bi bi-people"></i> Patient List</h2>
                <p class="text-muted">List of all admitted patients</p>
            </div>
            <div class="col-md-4 text-end">
                <a href="@Url.Action("Admit")" class="btn btn-success"><i class="bi bi-person-plus"></i> Admit New Patient</a>
            </div>
        </div>
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-search"></i> Search Patients</h5>
            </div>
            <div class="card-body">
                <form action="@Url.Action("Search")" method="get" id="searchForm">
                    <div class="input-group">
                        <input type="text" class="form-control" id="query" name="query" placeholder="Search by name or contact number">
                        <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Search</button>
                    </div>
                </form>
            </div>
        </div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-list-ul"></i> Patients</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Age</th>
                                <th>Gender</th>
                                <th>Ward</th>
                                <th>Bed</th>
                                <th>Doctor</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="9" class="text-center">No patients found.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var patient in Model)
                                {
                                    <tr>
                                        <td>@patient.Id</td>
                                        <td>@patient.FirstName @patient.LastName</td>
                                        <td>@(DateTime.Now.Year - patient.DateOfBirth.Year)</td>
                                        <td>@patient.Gender</td>
                                        <td>@(patient.Ward?.Name ?? "N/A")</td>
                                        <td>@(patient.Bed?.BedNumber ?? "N/A")</td>
                                        <td>@(patient.AssignedDoctor?.FullName ?? "N/A")</td>
                                        <td>@patient.PatientStatus</td>
                                        <td>
                                            <a href="@Url.Action("DetailsPatient", new { id = patient.Id })" class="btn btn-sm btn-info" title="Details"><i class="bi bi-eye"></i></a>
                                            <a href="@Url.Action("EditPatient", new { id = patient.Id })" class="btn btn-sm btn-warning" title="Edit"><i class="bi bi-pencil"></i></a>
                                            <a href="@Url.Action("DeletePatient", new { id = patient.Id })" class="btn btn-sm btn-danger" title="Delete"><i class="bi bi-trash"></i></a>
                                            <a href="@Url.Action("PatientFolder", new { id = patient.Id })" class="btn btn-sm btn-primary" title="Patient Folder"><i class="bi bi-folder"></i></a>
                                            <a href="@Url.Action("Discharge", new { id = patient.Id })" class="btn btn-sm btn-secondary" title="Discharge"><i class="bi bi-box-arrow-right"></i></a>
                                            <a href="@Url.Action("ManageConditions", new { id = patient.Id })" class="btn btn-sm btn-warning" title="Manage Conditions"><i class="bi bi-heart-pulse"></i></a>
                                            <a asp-action="ManageAllergies" asp-route-Id="@patient.Id" class="btn btn-sm btn-info" title="Manage Allergies">
                                                <i class="bi bi-shield-exclamation"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Auto-submit search form when user types
            $('input[name="query"]').on('keyup', function () {
                if ($(this).val().length >= 2 || $(this).val().length === 0) {
                    $(this).closest('form').submit();
                }
            });

            // Fade out success message after 5 seconds
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    $(".alert-success").show();
                setTimeout(function () { $(".alert-success").fadeOut(); }, 5000);
            </text>
        }
                });
    </script>
</body>
</html>