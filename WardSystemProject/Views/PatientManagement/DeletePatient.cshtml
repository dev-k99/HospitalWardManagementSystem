@model WardSystemProject.Models.Patient
@{
    ViewData["Title"] = "Delete Patient";
}

<div class="container mt-4">
    <h2 class="text-danger mb-3">Delete Patient</h2>

    <div class="alert alert-warning">
        <strong>Warning:</strong> You are about to deactivate the following patient. This action will not permanently delete the record, but will mark it as inactive.
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="card-title text-primary">@Model.FullName</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Patient ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Date of Birth</dt>
                <dd class="col-sm-9">@Model.DateOfBirth.ToShortDateString()</dd>

                <dt class="col-sm-3">Gender</dt>
                <dd class="col-sm-9">@Model.Gender</dd>

                <dt class="col-sm-3">Contact Number</dt>
                <dd class="col-sm-9">@Model.ContactNumber</dd>

                <dt class="col-sm-3">Ward</dt>
                <dd class="col-sm-9">@Model.Ward?.Name ??  </dd>

                <dt class="col-sm-3">Bed</dt>
                <dd class="col-sm-9">@Model.Bed?.BedNumber ?? </dd>

                <dt class="col-sm-3">Assigned Doctor</dt>
                <dd class="col-sm-9">@Model.AssignedDoctor?.FullName ??  </dd>

                <dt class="col-sm-3">Admission Date</dt>
                <dd class="col-sm-9">@Model.AdmissionDate?.ToString("yyyy-MM-dd HH:mm") ??</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.IsActive ? "success" : "secondary")">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="DeletePatient" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>

            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Deletion
            </button>
        </div>
    </form>
</div>
