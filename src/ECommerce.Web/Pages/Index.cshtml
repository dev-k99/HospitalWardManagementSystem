@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1>Welcome to the Store</h1>
            <p class="text-muted">Browse our latest products.</p>
        </div>
    </div>
    <div class="row" id="products"></div>
</div>

@section Scripts{
<script>
(async function(){
    const res = await fetch('/api/products');
    const data = await res.json();
    const container = document.getElementById('products');
    container.innerHTML = '';
    (data.items || data.Items || []).forEach(p => {
        const col = document.createElement('div');
        col.className = 'col-md-3 mb-3';
        col.innerHTML = `
            <div class="card h-100">
                <img src="${p.imageUrl || 'https://placehold.co/600x400'}" class="card-img-top" alt="${p.name}">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">${p.name}</h5>
                    <p class="card-text">$${p.price?.toFixed(2)}</p>
                    <a href="/Product?id=${p.id}" class="btn btn-primary mt-auto">View</a>
                </div>
            </div>`;
        container.appendChild(col);
    });
})();
</script>
}
