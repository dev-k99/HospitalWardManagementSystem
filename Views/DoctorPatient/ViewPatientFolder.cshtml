@model WardSystemProject.Models.Patient

@{
    ViewData["Title"] = "Patient Folder";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-info">
                <i class="bi bi-folder2-open"></i> Patient Folder
            </h2>
            <h4 class="text-dark">@Model.FullName</h4>
            <p class="text-muted">Comprehensive patient information and medical history</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="btn-group" role="group">
                <a asp-action="CreateVisit" asp-route-patientId="@Model.Id" class="btn btn-success">
                    <i class="bi bi-calendar-plus"></i> Record Visit
                </a>
                <a asp-action="CreatePrescription" asp-route-patientId="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-capsule"></i> Prescribe
                </a>
                <a asp-action="CreateInstruction" asp-route-patientId="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-clipboard-check"></i> Instructions
                </a>
            </div>
        </div>
    </div>

    <!-- Patient Information -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person"></i> Patient Information
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Age</dt>
                        <dd class="col-sm-8">@Model.Age years old</dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">@Model.Gender</dd>

                        <dt class="col-sm-4">Contact</dt>
                        <dd class="col-sm-8">@Model.ContactNumber</dd>

                        <dt class="col-sm-4">Blood Type</dt>
                        <dd class="col-sm-8">@Model.BloodType</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-hospital"></i> Current Assignment
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Ward</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">@Model.Ward?.Name</span>
                        </dd>

                        <dt class="col-sm-4">Bed</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-success">@Model.Bed?.BedNumber</span>
                        </dd>

                        <dt class="col-sm-4">Admission Date</dt>
                        <dd class="col-sm-8">@Model.AdmissionDate?.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.PatientStatus == "Admitted")
                            {
                                <span class="badge bg-success">@Model.PatientStatus</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">@Model.PatientStatus</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Assigned Doctor</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.AssignedDoctor?.FullName</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Medical Information -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Allergies
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.PatientAllergies != null && Model.PatientAllergies.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var allergy in Model.PatientAllergies.Where(a => a.IsActive))
                            {
                                <li class="list-group-item">
                                    <i class="bi bi-exclamation-triangle text-danger"></i>
                                    @allergy.AllergyName
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No allergies recorded</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-clipboard-pulse"></i> Medical Conditions
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.MedicalConditions != null && Model.MedicalConditions.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var condition in Model.MedicalConditions.Where(c => c.IsActive))
                            {
                                <li class="list-group-item">
                                    <i class="bi bi-clipboard-pulse text-info"></i>
                                    @condition.ConditionName
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No medical conditions recorded</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Vital Signs -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-heart-pulse"></i> Recent Vital Signs
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.VitalSigns != null && Model.VitalSigns.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Blood Pressure</th>
                                        <th>Temperature</th>
                                        <th>Heart Rate</th>
                                        <th>Respiratory Rate</th>
                                        <th>Oxygen Saturation</th>
                                        <th>Recorded By</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var vital in Model.VitalSigns.Take(10))
                                    {
                                        <tr>
                                            <td>@vital.RecordDate.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@vital.BloodPressure</td>
                                            <td>@vital.Temperature°C</td>
                                            <td>@vital.HeartRate bpm</td>
                                            <td>@vital.RespiratoryRate/min</td>
                                            <td>@vital.OxygenSaturation%</td>
                                            <td>@vital.RecordedBy</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No vital signs recorded</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Doctor Visits -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-check"></i> Recent Doctor Visits
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.DoctorVisits != null && Model.DoctorVisits.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Visit Type</th>
                                        <th>Notes</th>
                                        <th>Next Visit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var visit in Model.DoctorVisits.Take(10))
                                    {
                                        <tr>
                                            <td>@visit.VisitDate.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <span class="badge bg-primary">Visit</span>
                                            </td>
                                            <td>@visit.Notes</td>
                                            <td>-</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No doctor visits recorded</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Prescriptions -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-capsule"></i> Recent Prescriptions
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Prescriptions != null && Model.Prescriptions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Medication</th>
                                        <th>Dosage Instructions</th>
                                        <th>Duration</th>
                                        <th>Instructions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var prescription in Model.Prescriptions.Take(10))
                                    {
                                        <tr>
                                            <td>@prescription.PrescriptionDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <strong>@prescription.Medication?.Name</strong>
                                                <br />
                                                <small class="text-muted">@prescription.Medication?.Description</small>
                                            </td>
                                            <td>@prescription.DosageInstructions</td>
                                            <td>-</td>
                                            <td>-</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No prescriptions recorded</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Doctor Instructions -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-clipboard-check"></i> Recent Doctor Instructions
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.DoctorInstructions != null && Model.DoctorInstructions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Type</th>
                                        <th>Priority</th>
                                        <th>Status</th>
                                        <th>Instructions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var instruction in Model.DoctorInstructions.Take(10))
                                    {
                                        <tr>
                                            <td>@instruction.InstructionDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="badge bg-primary">@instruction.InstructionType</span>
                                            </td>
                                            <td>
                                                @if (instruction.Priority == "High")
                                                {
                                                    <span class="badge bg-danger">@instruction.Priority</span>
                                                }
                                                else if (instruction.Priority == "Medium")
                                                {
                                                    <span class="badge bg-warning">@instruction.Priority</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">@instruction.Priority</span>
                                                }
                                            </td>
                                            <td>
                                                @if (instruction.Status == "Completed")
                                                {
                                                    <span class="badge bg-success">@instruction.Status</span>
                                                }
                                                else if (instruction.Status == "In Progress")
                                                {
                                                    <span class="badge bg-warning">@instruction.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@instruction.Status</span>
                                                }
                                            </td>
                                            <td>@instruction.Instructions</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No doctor instructions recorded</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <a asp-action="CreateVisit" asp-route-patientId="@Model.Id" class="btn btn-outline-success w-100 mb-2">
                                <i class="bi bi-calendar-plus"></i> Record Visit
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="CreatePrescription" asp-route-patientId="@Model.Id" class="btn btn-outline-warning w-100 mb-2">
                                <i class="bi bi-capsule"></i> Prescribe Medication
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="CreateInstruction" asp-route-patientId="@Model.Id" class="btn btn-outline-primary w-100 mb-2">
                                <i class="bi bi-clipboard-check"></i> Create Instruction
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="DischargePatient" asp-route-id="@Model.Id" class="btn btn-outline-danger w-100 mb-2">
                                <i class="bi bi-box-arrow-right"></i> Discharge Patient
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
