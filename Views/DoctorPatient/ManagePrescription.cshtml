@model IEnumerable<WardSystemProject.Models.Prescription>

@{
    ViewData["Title"] = "Manage Prescriptions";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Manage Prescriptions</h2>

    <p class="mb-3">
        <a asp-action="CreatePrescription" class="btn btn-success">Create New Prescription</a>
    </p>

    <table class="table table-striped table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Patient.FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.Patient.LastName)</th>
                <th>@Html.DisplayNameFor(model => model.Doctor.FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.Doctor.LastName)</th>
                <th>@Html.DisplayNameFor(model => model.Medication.Name)</th>
                <th>@Html.DisplayNameFor(model => model.DosageInstructions)</th>
                <th>@Html.DisplayNameFor(model => model.PrescriptionDate)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                   <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Patient.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Patient.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Doctor.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Doctor.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Medication.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.DosageInstructions)</td>
                        <td>@Html.DisplayFor(modelItem => item.PrescriptionDate)</td>
                        <td>
                            <a asp-action="EditPrescription" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">Edit</a>
                            <a asp-action="DetailsPrescription" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Details</a>
                            <form asp-action="SoftDeletePrescription" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to soft delete this prescription?');">Delete</button>
                            </form>
                        </td>
                   </tr>
            }
        </tbody>
    </table>
</div>
