@model IEnumerable<WardSystemProject.Models.Patient>

@{
    ViewData["Title"] = "Manage Patients";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-primary">Manage Patients</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Admit" class="btn btn-success me-2">
                <i class="bi bi-person-plus"></i> Admit Patient
            </a>
            <a asp-action="Create" class="btn btn-outline-primary">
                <i class="bi bi-plus-circle"></i> Create Patient
            </a>
        </div>
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Search" method="get">
                <div class="input-group">
                    <input type="text" name="query" class="form-control" placeholder="Search by patient name..." />
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No patients found. 
            <a asp-action="Create" class="alert-link">Create the first patient</a>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                <th>Patient Name</th>
                                <th>Date of Birth</th>
                                <th>Age</th>
                                <th>Ward</th>
                                <th>Bed</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>
                                        <strong>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</strong>
                                    </td>
                                    <td>@item.DateOfBirth.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @{
                                            var age = DateTime.Now.Year - item.DateOfBirth.Year;
                                            if (item.DateOfBirth.Date > DateTime.Now.AddYears(-age)) age--;
                                        }
                                        <span class="badge bg-info">@age years</span>
                                    </td>
                                    <td>
                                        @if (item.Ward != null)
                                        {
                                            <span class="badge bg-primary">@item.Ward.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not assigned</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Bed != null)
                                        {
                                            <span class="badge bg-success">@item.Bed.BedNumber</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not assigned</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="PatientFolder" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-success" title="Patient Folder">
                                                <i class="bi bi-folder2-open"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-info" title="Details">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                            <form asp-action="SoftDelete" method="post" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger" 
                                                        onclick="return confirm('Are you sure you want to delete this patient?');"
                                                        title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-submit search form when user types
        $(document).ready(function() {
            $('input[name="query"]').on('keyup', function() {
                if ($(this).val().length >= 2) {
                    $(this).closest('form').submit();
                }
            });
        });
    </script>
}