@model WardSystemProject.Models.Bed

@{
    ViewData["Title"] = "Delete Bed";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Bed
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-circle"></i> Warning
                        </h5>
                        <p class="mb-0">Are you sure you want to delete this bed? This action cannot be undone.</p>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title text-primary">
                                <i class="bi bi-bed"></i> Bed #@Model.BedNumber
                            </h5>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-4 text-dark fw-bold">
                                    <i class="bi bi-hash"></i> Bed Number
                                </dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.BedNumber)</dd>
                                
                                <dt class="col-sm-4 text-dark fw-bold">
                                    <i class="bi bi-door-open"></i> Room Number
                                </dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Room.RoomNumber)</dd>
                                
                                <dt class="col-sm-4 text-dark fw-bold">
                                    <i class="bi bi-hospital"></i> Ward
                                </dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Room.Ward.Name)</dd>
                                
                                <dt class="col-sm-4 text-dark fw-bold">
                                    <i class="bi bi-person"></i> Status
                                </dt>
                                <dd class="col-sm-8">
                                    @if (Model.PatientId.HasValue)
                                    {
                                        <span class="badge bg-warning text-dark">Occupied</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="SoftDeleteBed" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-3">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <a asp-action="DetailsBed" asp-route-id="@Model.Id" class="btn btn-info ms-2">
                                <i class="bi bi-info-circle"></i> View Details
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
