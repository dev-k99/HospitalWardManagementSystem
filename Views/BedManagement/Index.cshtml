@model IEnumerable<WardSystemProject.Models.Bed>

@{
    ViewData["Title"] = "Manage Beds";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-primary">Manage Beds</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="CreateBed" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create New Bed
            </a>
        </div>
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Search" method="get">
                <div class="input-group">
                    <input type="text" name="query" class="form-control" placeholder="Search by bed number or room number..." />
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No beds found. 
            <a asp-action="CreateBed" class="alert-link">Create the first bed</a>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.BedNumber)</th>
                                <th>Room Number</th>
                                <th>Ward</th>
                                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>
                                        <strong>@Html.DisplayFor(modelItem => item.BedNumber)</strong>
                                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Room.RoomNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Room.Ward.Name)</td>
                    <td>
                                        @if (item.PatientId.HasValue)
                                        {
                                            <span class="badge bg-warning text-dark">Occupied</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Available</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="EditBed" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="DetailsBed" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-info" title="Details">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                        <form asp-action="SoftDeleteBed" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger" 
                                                        onclick="return confirm('Are you sure you want to delete this bed?');"
                                                        title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                        </form>
                                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-submit search form when user types
        $(document).ready(function() {
            $('input[name="query"]').on('keyup', function() {
                if ($(this).val().length >= 2) {
                    $(this).closest('form').submit();
                }
            });
        });
    </script>
}
