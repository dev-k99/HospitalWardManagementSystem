@model IEnumerable<WardSystemProject.Models.PrescriptionOrder>

@{
    ViewData["Title"] = "Manage Prescription Orders";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-primary">Manage Prescription Orders</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="CreatePrescriptionOrder" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create New Order
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No prescription orders found. 
            <a asp-action="CreatePrescriptionOrder" class="alert-link">Create the first order</a>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                <th>Prescription ID</th>
                                <th>Script Manager</th>
                                <th>Sent To Pharmacy</th>
                                <th>Received In Ward</th>
                                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>
                                        <strong>@Html.DisplayFor(modelItem => item.Prescription.Id)</strong>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ScriptManager.FirstName) 
                                        @Html.DisplayFor(modelItem => item.ScriptManager.LastName)
                                    </td>
                                    <td>
                                        @if (item.SentToPharmacy.HasValue)
                                        {
                                            @item.SentToPharmacy?.ToString("g")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not sent</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.ReceivedInWard.HasValue)
                                        {
                                            @item.ReceivedInWard?.ToString("g")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not received</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Status == "Completed")
                                        {
                                            <span class="badge bg-success">@item.Status</span>
                                        }
                                        else if (item.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">@item.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">@item.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="EditPrescriptionOrder" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="DetailsPrescriptionOrder" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-info" title="Details">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                        <form asp-action="SoftDeletePrescriptionOrder" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger" 
                                                        onclick="return confirm('Are you sure you want to delete this order?');"
                                                        title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                        </form>
                                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
                </div>
            </div>
        </div>
    }
</div>
