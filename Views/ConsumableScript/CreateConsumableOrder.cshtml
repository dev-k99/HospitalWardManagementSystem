@model WardSystemProject.Models.ConsumableOrder

@{
    ViewData["Title"] = "Create Consumable Order";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title text-primary mb-0">
                        <i class="bi bi-box-seam"></i> Create New Consumable Order
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="CreateConsumableOrder" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="ConsumableId" class="form-label fw-bold">
                                <i class="bi bi-box"></i> Consumable
                            </label>
                            @if (ViewBag.ConsumableId != null)
                            {
                                @Html.DropDownListFor(model => model.ConsumableId, 
                                    (SelectList)ViewBag.ConsumableId, 
                                    "Select a consumable", 
                                    new { @class = "form-select", required = "required" })
                            }
                            else
                            {
                                <select asp-for="ConsumableId" class="form-select" required>
                                    <option value="">Select a consumable</option>
                                </select>
                            }
                            <span asp-validation-for="ConsumableId" class="text-danger"></span>
                            <div class="form-text">
                                Choose the consumable item to order
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="StockManagerId" class="form-label fw-bold">
                                <i class="bi bi-person-badge"></i> Stock Manager
                            </label>
                            @if (ViewBag.StockManagerId != null)
                            {
                                @Html.DropDownListFor(model => model.StockManagerId, 
                                    (SelectList)ViewBag.StockManagerId, 
                                    "Select a stock manager", 
                                    new { @class = "form-select", required = "required" })
                            }
                            else
                            {
                                <select asp-for="StockManagerId" class="form-select" required>
                                    <option value="">Select a stock manager</option>
                                </select>
                            }
                            <span asp-validation-for="StockManagerId" class="text-danger"></span>
                            <div class="form-text">
                                Choose the staff member managing this order
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label fw-bold">
                                <i class="bi bi-hash"></i> Quantity
                            </label>
                            <input asp-for="Quantity" type="number" min="1" max="1000" class="form-control" 
                                   placeholder="Enter quantity (1-1000)" required />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                            <div class="form-text">
                                Enter the quantity to order (between 1 and 1000)
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="OrderDate" class="form-label fw-bold">
                                <i class="bi bi-calendar-event"></i> Order Date
                            </label>
                            <input asp-for="OrderDate" type="datetime-local" class="form-control" required />
                            <span asp-validation-for="OrderDate" class="text-danger"></span>
                            <div class="form-text">
                                Date and time when this order was placed
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ReceivedDate" class="form-label fw-bold">
                                <i class="bi bi-calendar-check"></i> Received Date
                            </label>
                            <input asp-for="ReceivedDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="ReceivedDate" class="text-danger"></span>
                            <div class="form-text">
                                Date and time when items were received (optional)
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-bold">
                                <i class="bi bi-flag"></i> Status
                            </label>
                            <select asp-for="Status" class="form-select" required>
                                <option value="">Select status</option>
                                <option value="Pending">Pending</option>
                                <option value="In Transit">In Transit</option>
                                <option value="Delivered">Delivered</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                            <div class="form-text">
                                Set the current status of this order
                            </div>
                        </div>
                        
                        <div class="mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Create Order
                            </button>
                            <a asp-action="ManageConsumableOrders" class="btn btn-secondary ms-2">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Custom validation
        $(document).ready(function() {
            $('form').on('submit', function() {
                if (!$(this)[0].checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                $(this).addClass('was-validated');
            });
        });
    </script>
}
