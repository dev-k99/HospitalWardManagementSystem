@model WardSystemProject.Models.ConsumableOrder

@{
    ViewData["Title"] = "Delete Consumable Order";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Consumable Order
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-circle"></i> Warning
                        </h5>
                        <p class="mb-0">Are you sure you want to delete this consumable order? This action cannot be undone.</p>
                    </div>

    <div class="card">
        <div class="card-body">
                            <h5 class="card-title text-primary">
                                <i class="bi bi-box-seam"></i> Order #@Model.Id
                            </h5>
            <hr />
            <dl class="row">
                                <dt class="col-sm-4 text-dark fw-bold">
                                    <i class="bi bi-box"></i> Consumable
                                </dt>
                                <dd class="col-sm-8">
                                    <strong>@Html.DisplayFor(model => model.Consumable.Name)</strong>
                                    <br />
                                    <small class="text-muted">Ward: @Html.DisplayFor(model => model.Consumable.Ward.Name)</small>
                                </dd>
                                
                                <dt class="col-sm-4 text-dark fw-bold">
                                    <i class="bi bi-person-badge"></i> Stock Manager
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.StockManager.FirstName) 
                                    @Html.DisplayFor(model => model.StockManager.LastName)
                                </dd>
                                
                                <dt class="col-sm-4 text-dark fw-bold">
                                    <i class="bi bi-hash"></i> Quantity
                                </dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-primary">@Html.DisplayFor(model => model.Quantity)</span>
                                </dd>
                                
                                <dt class="col-sm-4 text-dark fw-bold">
                                    <i class="bi bi-flag"></i> Status
                                </dt>
                                <dd class="col-sm-8">
                                    @if (Model.Status == "Delivered")
                                    {
                                        <span class="badge bg-success">@Model.Status</span>
                                    }
                                    else if (Model.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">@Model.Status</span>
                                    }
                                    else if (Model.Status == "In Transit")
                                    {
                                        <span class="badge bg-info">@Model.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Model.Status</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-4 text-dark fw-bold">
                                    <i class="bi bi-calendar-event"></i> Order Date
                                </dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.OrderDate)</dd>
                                
                                <dt class="col-sm-4 text-dark fw-bold">
                                    <i class="bi bi-calendar-check"></i> Received Date
                                </dt>
                                <dd class="col-sm-8">
                                    @if (Model.ReceivedDate.HasValue)
                                    {
                                        @Model.ReceivedDate.Value.ToString("g")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not received</span>
                                    }
                                </dd>
            </dl>
        </div>
    </div>

                    <form asp-action="SoftDeleteConsumableOrder" method="post" class="mt-4">
        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                            <a asp-action="ManageConsumableOrders" class="btn btn-secondary ms-2">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <a asp-action="DetailsConsumableOrder" asp-route-id="@Model.Id" class="btn btn-info ms-2">
                                <i class="bi bi-info-circle"></i> View Details
                            </a>
                        </div>
    </form>
                </div>
            </div>
        </div>
    </div>
</div>
