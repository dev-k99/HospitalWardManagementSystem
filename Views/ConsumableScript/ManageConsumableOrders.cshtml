@model IEnumerable<WardSystemProject.Models.ConsumableOrder>

@{
    ViewData["Title"] = "Manage Consumable Orders";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-primary">Manage Consumable Orders</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="CreateConsumableOrder" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create New Order
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No consumable orders found. 
            <a asp-action="CreateConsumableOrder" class="alert-link">Create the first order</a>
        </div>
    }
    else
    {
        <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                        <tr>
                            <th>Consumable</th>
                            <th>Quantity</th>
                            <th>Order Date</th>
                            <th>Received Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                    <td>
                                        <strong>@item.Consumable?.Name</strong>
                                        <br />
                                        <small class="text-muted">Ward: @item.Consumable?.Ward?.Name</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary fs-6">@item.Quantity</span>
                                    </td>
                                <td>@item.OrderDate.ToString("g")</td>
                                    <td>
                                        @if (item.ReceivedDate.HasValue)
                                        {
                                            @item.ReceivedDate?.ToString("g")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not received</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Status == "Delivered")
                                        {
                                            <span class="badge bg-success">@item.Status</span>
                                        }
                                        else if (item.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">@item.Status</span>
                                        }
                                        else if (item.Status == "In Transit")
                                        {
                                            <span class="badge bg-info">@item.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.Status</span>
                                        }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                            <a asp-action="EditConsumableOrder" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="DetailsConsumableOrder" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-info" title="Details">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                            <form asp-action="SoftDeleteConsumableOrder" method="post" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger" 
                                                        onclick="return confirm('Are you sure you want to delete this order?');"
                                                        title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    }
</div>