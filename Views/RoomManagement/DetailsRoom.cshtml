@model WardSystemProject.Models.Room

@{
    ViewData["Title"] = "Room Details";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Room Details</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Room #@Model.Id</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 text-dark fw-bold">@Html.DisplayNameFor(model => model.RoomNumber)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RoomNumber)</dd>
                <dt class="col-sm-3 text-dark fw-bold">@Html.DisplayNameFor(model => model.Ward.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Ward.Name)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="EditRoom" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="ManageRooms" class="btn btn-secondary ms-2">Back to List</a>
    </div>
</div>
