@model WardSystemProject.Models.Room

@{
    ViewData["Title"] = "Delete Room";
}

<div class="container mt-4">
    <h2 class="mb-4 text-danger">Delete Room</h2>
    <h4 class="text-warning">Are you sure you want to soft delete this room?</h4>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Room #@Model.Id</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 text-dark fw-bold">@Html.DisplayNameFor(model => model.RoomNumber)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RoomNumber)</dd>
                <dt class="col-sm-3 text-dark fw-bold">@Html.DisplayNameFor(model => model.Ward.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Ward.Name)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="SoftDeleteRoom" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Soft Delete</button>
        <a asp-action="ManageRooms" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>