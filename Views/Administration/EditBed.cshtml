@model WardSystemProject.Models.Bed

@{
    ViewData["Title"] = "Edit Bed";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-primary">
                <i class="bi bi-bed"></i> Edit Bed
            </h2>
            <p class="text-muted">Update bed information</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="ManageBeds" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Bed List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-bed"></i> Bed Information
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditBed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="BedNumber" class="form-label fw-bold">Bed Number</label>
                                <input asp-for="BedNumber" class="form-control" placeholder="Enter bed number" />
                                <span asp-validation-for="BedNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="RoomId" class="form-label fw-bold">Room</label>
                                <select asp-for="RoomId" asp-items="ViewBag.RoomList" class="form-select">
                                    <option value="">Select a room</option>
                                </select>
                                <span asp-validation-for="RoomId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PatientId" class="form-label fw-bold">Patient</label>
                                <select asp-for="PatientId" asp-items="ViewBag.PatientList" class="form-select">
                                    <option value="">Select a patient (optional)</option>
                                </select>
                                <span asp-validation-for="PatientId" class="text-danger"></span>
                                <small class="form-text text-muted">Leave empty if the bed is not assigned to a patient.</small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label fw-bold">
                                    Active Bed
                                </label>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="ManageBeds" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Update Bed
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle"></i> Help
                    </h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted">
                        <strong>Bed Guidelines:</strong>
                    </p>
                    <ul class="small text-muted">
                        <li>Bed numbers should be unique within each room</li>
                        <li>Use a consistent numbering system (e.g., A1, A2, B1, B2)</li>
                        <li>Each bed can be assigned to one patient at a time</li>
                        <li>Beds are automatically assigned to the selected room</li>
                        <li>Patient assignment is optional</li>
                    </ul>
                    <hr />
                    <p class="small text-muted">
                        <strong>Note:</strong> Deactivating a bed will make it unavailable for patient assignments.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 