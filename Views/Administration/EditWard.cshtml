@model WardSystemProject.Models.Ward

@{
    ViewData["Title"] = "Edit Ward";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title text-primary mb-0">
                        <i class="bi bi-pencil"></i> Edit Ward
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditWard" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">
                                <i class="bi bi-building"></i> Ward Name
                            </label>
                            <input asp-for="Name" class="form-control" 
                                   placeholder="Enter ward name (e.g., General Ward, ICU, etc.)" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="form-text">
                                Enter a unique name for this ward (2-100 characters)
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="bi bi-text-paragraph"></i> Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3" 
                                      placeholder="Enter ward description (optional)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="form-text">
                                Provide a brief description of this ward (optional, max 500 characters)
                            </div>
                        </div>
                        
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <a asp-action="DetailsWard" asp-route-id="@Model.Id" class="btn btn-info ms-2">
                                <i class="bi bi-info-circle"></i> View Details
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Custom validation
        $(document).ready(function() {
            $('form').on('submit', function() {
                if (!$(this)[0].checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                $(this).addClass('was-validated');
            });
        });
    </script>
}