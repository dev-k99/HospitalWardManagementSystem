@model WardSystemProject.Models.Ward

@{
    ViewData["Title"] = "Delete Ward";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Ward
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-circle"></i> Warning
                        </h5>
                        <p class="mb-0">Are you sure you want to delete this ward? This action cannot be undone.</p>
                    </div>

    <div class="card">
        <div class="card-body">
                            <h5 class="card-title text-primary">
                                <i class="bi bi-hospital"></i> Ward: @Model.Name
                            </h5>
            <hr />
            <dl class="row">
                                <dt class="col-sm-4 text-dark fw-bold">
                                    <i class="bi bi-hash"></i> Ward ID
                                </dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>
                                
                                <dt class="col-sm-4 text-dark fw-bold">
                                    <i class="bi bi-building"></i> Ward Name
                                </dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                                
                                <dt class="col-sm-4 text-dark fw-bold">
                                    <i class="bi bi-text-paragraph"></i> Description
                                </dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Description))
                                    {
                                        @Html.DisplayFor(model => model.Description)
                                    }
                                    else
                                    {
                                        <span class="text-muted">No description</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-4 text-dark fw-bold">
                                    <i class="bi bi-door-open"></i> Rooms Count
                                </dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@(Model.Rooms?.Count ?? 0) rooms</span>
                                </dd>
                                
                                @if (Model.Rooms != null && Model.Rooms.Any())
                                {
                                    <dt class="col-sm-4 text-dark fw-bold">
                                        <i class="bi bi-door-open"></i> Rooms
                                    </dt>
                                    <dd class="col-sm-8">
                                        <ul class="list-unstyled">
                                            @foreach (var room in Model.Rooms)
                                            {
                                                <li><span class="badge bg-secondary">@room.RoomNumber</span></li>
                                            }
                                        </ul>
                                    </dd>
                                }
            </dl>
        </div>
    </div>

                    <form asp-action="SoftDeleteWard" method="post" class="mt-4">
        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <a asp-action="DetailsWard" asp-route-id="@Model.Id" class="btn btn-info ms-2">
                                <i class="bi bi-info-circle"></i> View Details
                            </a>
                        </div>
    </form>
                </div>
            </div>
        </div>
    </div>
</div>
