@model WardSystemProject.Models.Bed

@{
    ViewData["Title"] = "Delete Bed";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-danger">
                <i class="bi bi-bed"></i> Delete Bed
            </h2>
            <p class="text-muted">Remove a bed from the system</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="ManageBeds" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Bed List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Warning:</strong> This action will deactivate the bed. It will no longer be available for patient assignments.
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-bed"></i> Bed Information
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Bed Number</dt>
                        <dd class="col-sm-9">@Model.BedNumber</dd>

                        <dt class="col-sm-3">Room</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">
                                @Model.Room?.RoomNumber
                            </span>
                        </dd>

                        <dt class="col-sm-3">Ward</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-secondary">
                                @Model.Room?.Ward?.Name
                            </span>
                        </dd>

                        <dt class="col-sm-3">Patient</dt>
                        <dd class="col-sm-9">
                            @if (Model.Patient != null)
                            {
                                <span class="badge bg-warning">
                                    @Model.Patient.FirstName @Model.Patient.LastName
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-light text-dark">Available</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="DeleteBed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="ManageBeds" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Bed
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Important Notice
                    </h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted">
                        <strong>What happens when you delete a bed:</strong>
                    </p>
                    <ul class="small text-muted">
                        <li>The bed will be marked as inactive</li>
                        <li>It will no longer be available for patient assignments</li>
                        <li>If a patient is currently assigned, they will remain assigned</li>
                        <li>You can reactivate it later if needed</li>
                    </ul>
                    <hr />
                    <p class="small text-muted">
                        <strong>Note:</strong> This action is reversible. You can edit the bed later to reactivate it.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div> 