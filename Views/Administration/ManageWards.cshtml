@model IEnumerable<WardSystemProject.Models.Ward>

@{
    ViewData["Title"] = "Manage Wards";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-primary">
                <i class="bi bi-building"></i> Ward Management
            </h2>
            <p class="text-muted">Manage hospital wards and their configurations</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="CreateWard" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create New Ward
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-list-ul"></i> Active Wards
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Ward Name</th>
                                <th>Description</th>
                                <th>Rooms Count</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ward in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@ward.Name</strong>
                                    </td>
                                    <td>@ward.Description</td>
                                    <td>
                                        <span class="badge bg-info">
                                            @(ward.Rooms?.Count ?? 0) Rooms
                                        </span>
                                    </td>
                                    <td>
                                        @if (ward.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="DetailsWard" asp-route-id="@ward.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> Details
                                            </a>
                                            <a asp-action="EditWard" asp-route-id="@ward.Id" class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <a asp-action="DeleteWard" asp-route-id="@ward.Id" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            <strong>No wards found.</strong> Create your first ward to get started.
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Add any JavaScript functionality here
        });
    </script>
} 