@model WardSystemProject.Models.Room

@{
    ViewData["Title"] = "Edit Room";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-primary">
                <i class="bi bi-door-open"></i> Edit Room
            </h2>
            <p class="text-muted">Update room information</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="ManageRooms" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Room List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-building"></i> Room Information
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditRoom" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RoomNumber" class="form-label fw-bold">Room Number</label>
                                <input asp-for="RoomNumber" class="form-control" placeholder="Enter room number" />
                                <span asp-validation-for="RoomNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="WardId" class="form-label fw-bold">Ward</label>
                                <select asp-for="WardId" asp-items="ViewBag.WardList" class="form-select">
                                    <option value="">Select a ward</option>
                                </select>
                                <span asp-validation-for="WardId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label fw-bold">
                                    Active Room
                                </label>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="ManageRooms" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Update Room
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle"></i> Help
                    </h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted">
                        <strong>Room Guidelines:</strong>
                    </p>
                    <ul class="small text-muted">
                        <li>Room numbers should be unique within each ward</li>
                        <li>Use a consistent numbering system (e.g., 101, 102, 103)</li>
                        <li>Each room can contain multiple beds</li>
                        <li>Rooms are automatically assigned to the selected ward</li>
                    </ul>
                    <hr />
                    <p class="small text-muted">
                        <strong>Note:</strong> Deactivating a room will make it unavailable for new bed assignments.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 