@model WardSystemProject.Models.Allergy

@{
    ViewData["Title"] = "Delete Allergy Record";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Allergy Record
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-circle"></i> Are you sure you want to delete this allergy record?
                        </h5>
                        <p class="mb-0">This action will deactivate the allergy record. It can be reactivated later if needed.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-person"></i> Patient
                                </label>
                                <p class="form-control-plaintext">@Model.Patient?.FirstName @Model.Patient?.LastName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-exclamation-triangle"></i> Allergy
                                </label>
                                <p class="form-control-plaintext">
                                    <span class="badge bg-warning text-dark">@Model.AllergyName</span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-toggle-on"></i> Current Status
                        </label>
                        <p class="form-control-plaintext">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </p>
                    </div>

                    <form asp-action="DeleteAllergy" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="ManageAllergies" class="btn btn-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Allergy Record
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 