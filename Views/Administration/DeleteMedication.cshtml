@model WardSystemProject.Models.Medication

@{
    ViewData["Title"] = "Delete Medication";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Medication
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-circle"></i> Are you sure you want to delete this medication?
                        </h5>
                        <p class="mb-0">This action will deactivate the medication. It can be reactivated later if needed.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-capsule"></i> Medication Name
                                </label>
                                <p class="form-control-plaintext">@Model.Name</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-speedometer2"></i> Dosage
                                </label>
                                <p class="form-control-plaintext">
                                    <span class="badge bg-info">@Model.Dosage</span>
                                </p>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-text-paragraph"></i> Description
                            </label>
                            <p class="form-control-plaintext">@Model.Description</p>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-toggle-on"></i> Current Status
                        </label>
                        <p class="form-control-plaintext">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </p>
                    </div>

                    <form asp-action="DeleteMedication" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="ManageMedications" class="btn btn-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Medication
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 