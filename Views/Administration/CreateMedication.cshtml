@model WardSystemProject.Models.Medication

@{
    ViewData["Title"] = "Create Medication";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-capsule"></i> Create New Medication
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateMedication" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">
                                <i class="bi bi-capsule"></i> Medication Name
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Enter medication name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="form-text">Enter the name of the medication (e.g., Paracetamol, Amoxicillin)</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="bi bi-text-paragraph"></i> Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter medication description (optional)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="form-text">Optional description of the medication's purpose and effects</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Dosage" class="form-label fw-bold">
                                <i class="bi bi-speedometer2"></i> Dosage Instructions
                            </label>
                            <input asp-for="Dosage" class="form-control" placeholder="Enter dosage instructions" required />
                            <span asp-validation-for="Dosage" class="text-danger"></span>
                            <div class="form-text">Standard dosage instructions (e.g., 500mg twice daily)</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="ManageMedications" class="btn btn-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Medication
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Client-side validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
} 