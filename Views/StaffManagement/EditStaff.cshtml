@model WardSystemProject.Models.Staff

@{
    ViewData["Title"] = "Edit Staff";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Edit Staff Member</h2>

    <form asp-action="EditStaff" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
                            <label asp-for="FirstName" class="control-label text-dark fw-bold"></label>
            <input asp-for="FirstName" class="form-control" required />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
                            <label asp-for="LastName" class="control-label text-dark fw-bold"></label>
            <input asp-for="LastName" class="form-control" required />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
                            <label asp-for="Role" class="control-label text-dark fw-bold"></label>
            <input asp-for="Role" class="form-control" required />
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <div class="form-group">
                            <label asp-for="Email" class="control-label text-dark fw-bold"></label>
            <input asp-for="Email" class="form-control" type="email" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="ManageStaff" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
