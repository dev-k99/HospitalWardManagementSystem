@model IEnumerable<WardSystemProject.Models.DoctorInstruction>

@{
    ViewData["Title"] = "Manage Doctor Instructions";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-info">
                <i class="bi bi-clipboard-check"></i> Manage Doctor Instructions
            </h2>
            <p class="text-muted">View and manage all doctor instructions for patient care</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="CreateDoctorInstruction" class="btn btn-info">
                <i class="bi bi-plus-circle"></i> Create New Instruction
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No doctor instructions found. 
            <a asp-action="CreateDoctorInstruction" class="alert-link">Create the first instruction</a>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Patient</th>
                                <th>Doctor</th>
                                <th>Instruction Type</th>
                                <th>Priority</th>
                                <th>Status</th>
                                <th>Instructions</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.Patient?.FullName</strong>
                                        <br />
                                        <small class="text-muted">@item.Patient?.Ward?.Name</small>
                                    </td>
                                    <td>
                                        <strong>@item.Doctor?.FullName</strong>
                                        <br />
                                        <small class="text-muted">@item.Doctor?.Role</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@item.InstructionType</span>
                                    </td>
                                    <td>
                                        @if (item.Priority == "High")
                                        {
                                            <span class="badge bg-danger">@item.Priority</span>
                                        }
                                        else if (item.Priority == "Medium")
                                        {
                                            <span class="badge bg-warning">@item.Priority</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@item.Priority</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Status == "Completed")
                                        {
                                            <span class="badge bg-success">@item.Status</span>
                                        }
                                        else if (item.Status == "In Progress")
                                        {
                                            <span class="badge bg-warning">@item.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Instructions))
                                        {
                                            <div class="text-truncate" style="max-width: 200px;" title="@item.Instructions">
                                                @item.Instructions
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No instructions</span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@item.InstructionDate.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="DetailsDoctorInstruction" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-info" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="EditDoctorInstruction" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="DeleteDoctorInstruction" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
