@model WardSystemProject.Models.MedicationAdministration

@{
    ViewData["Title"] = "Edit Medication Administration";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Edit Medication Administration</h2>

    <form asp-action="EditMedicationAdministration" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="PatientId" class="control-label text-dark fw-bold"></label>
            @Html.DropDownListFor(model => model.PatientId, (SelectList)ViewBag.PatientId, "Select Patient", new { @class = "form-control custom-select", required = "required" })
            <span asp-validation-for="PatientId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MedicationId" class="control-label text-dark fw-bold"></label>
            @Html.DropDownListFor(model => model.MedicationId, (SelectList)ViewBag.MedicationId, "Select Medication", new { @class = "form-control custom-select", required = "required" })
            <span asp-validation-for="MedicationId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AdministeringStaffId" class="control-label text-dark fw-bold"></label>
            @Html.DropDownListFor(model => model.AdministeringStaffId, (SelectList)ViewBag.AdministeringStaffId, "Select Staff", new { @class = "form-control custom-select", required = "required" })
            <span asp-validation-for="AdministeringStaffId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AdministrationDate" class="control-label text-dark fw-bold"></label>
            <input asp-for="AdministrationDate" class="form-control" type="datetime-local" required />
            <span asp-validation-for="AdministrationDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Dosage" class="control-label text-dark fw-bold"></label>
            <input asp-for="Dosage" class="form-control" required />
            <span asp-validation-for="Dosage" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="ManageMedicationAdministrations" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
