@model WardSystemProject.Models.MedicationAdministration

@{
    ViewData["Title"] = "Medication Administration Details";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Medication Administration Details</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Record #@Model.Id</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 text-dark fw-bold">@Html.DisplayNameFor(model => model.Patient.FirstName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Patient.FirstName)</dd>
                <dt class="col-sm-3 text-dark fw-bold">@Html.DisplayNameFor(model => model.Patient.LastName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Patient.LastName)</dd>
                <dt class="col-sm-3 text-dark fw-bold">@Html.DisplayNameFor(model => model.Medication.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Medication.Name)</dd>
                <dt class="col-sm-3 text-dark fw-bold">@Html.DisplayNameFor(model => model.AdministeringStaff.FirstName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AdministeringStaff.FirstName)</dd>
                <dt class="col-sm-3 text-dark fw-bold">@Html.DisplayNameFor(model => model.AdministeringStaff.LastName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AdministeringStaff.LastName)</dd>
                <dt class="col-sm-3 text-dark fw-bold">@Html.DisplayNameFor(model => model.AdministrationDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AdministrationDate)</dd>
                <dt class="col-sm-3 text-dark fw-bold">@Html.DisplayNameFor(model => model.Dosage)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Dosage)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="EditMedicationAdministration" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="ManageMedicationAdministrations" class="btn btn-secondary ms-2">Back to List</a>
    </div>
</div>
