@model IEnumerable<WardSystemProject.Models.MedicationAdministration>

@{
    ViewData["Title"] = "Manage Medication Administrations";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="bi bi-capsule text-primary me-2"></i>Manage Medication Administrations
            </h1>
            <p class="text-muted">View and manage all medication administration records</p>
        </div>
        <div>
            <a asp-action="CreateMedicationAdministration" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>New Administration
            </a>
        </div>
    </div>

    <!-- Filter Panel -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 fw-bold text-primary">
                <i class="bi bi-funnel me-2"></i>Filters
            </h6>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="patientFilter" class="form-label">Patient</label>
                    <input type="text" class="form-control" id="patientFilter" name="patientFilter" placeholder="Search by patient name" value="@Context.Request.Query["patientFilter"]">
                </div>
                <div class="col-md-3">
                    <label for="medicationFilter" class="form-label">Medication</label>
                    <input type="text" class="form-control" id="medicationFilter" name="medicationFilter" placeholder="Search by medication" value="@Context.Request.Query["medicationFilter"]">
                </div>
                <div class="col-md-3">
                    <label for="dateFilter" class="form-label">Date</label>
                    <input type="date" class="form-control" id="dateFilter" name="dateFilter" value="@Context.Request.Query["dateFilter"]">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search me-2"></i>Filter
                    </button>
                    <a asp-action="ManageMedicationAdministrations" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise me-2"></i>Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Medication Administrations Table -->
    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 fw-bold text-primary">
                <i class="bi bi-list-ul me-2"></i>Medication Administrations
            </h6>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="medicationTable">
                        <thead class="table-dark">
                            <tr>
                                <th>
                                    <a href="#" class="text-white text-decoration-none" onclick="sortTable(0)">
                                        Patient <i class="bi bi-arrow-down-up"></i>
                                    </a>
                                </th>
                                <th>
                                    <a href="#" class="text-white text-decoration-none" onclick="sortTable(1)">
                                        Medication <i class="bi bi-arrow-down-up"></i>
                                    </a>
                                </th>
                                <th>
                                    <a href="#" class="text-white text-decoration-none" onclick="sortTable(2)">
                                        Dosage <i class="bi bi-arrow-down-up"></i>
                                    </a>
                                </th>
                                <th>
                                    <a href="#" class="text-white text-decoration-none" onclick="sortTable(3)">
                                        Method <i class="bi bi-arrow-down-up"></i>
                                    </a>
                                </th>
                                <th>
                                    <a href="#" class="text-white text-decoration-none" onclick="sortTable(4)">
                                        Administered <i class="bi bi-arrow-down-up"></i>
                                    </a>
                                </th>
                                <th>
                                    <a href="#" class="text-white text-decoration-none" onclick="sortTable(5)">
                                        Date <i class="bi bi-arrow-down-up"></i>
                                    </a>
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="PatientManagement" asp-action="DetailsPatient" asp-route-id="@item.PatientId" class="text-decoration-none">
                                            <strong>@item.Patient?.FullName</strong>
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@item.Medication?.Name</span>
                                    </td>
                                    <td>@item.Dosage</td>
                                    <td>
                                        <span class="badge bg-secondary">@item.AdministrationMethod</span>
                                    </td>
                                    <td>@item.AdministeredBy</td>
                                    <td>@item.AdministrationDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="MedicationAdministrationDetails" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="EditMedicationAdministration" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="DeleteMedicationAdministration" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <nav aria-label="Medication administrations pagination">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Previous</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-capsule fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No medication administrations found</h5>
                    <p class="text-muted">Start by recording a new medication administration</p>
                    <a asp-action="CreateMedicationAdministration" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Record First Administration
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Table sorting functionality
        function sortTable(columnIndex) {
            const table = document.getElementById('medicationTable');
            const tbody = table.querySelector('tbody');
            const rows = Array.from(tbody.querySelectorAll('tr'));
            
            rows.sort((a, b) => {
                const aValue = a.cells[columnIndex].textContent.trim();
                const bValue = b.cells[columnIndex].textContent.trim();
                
                // Try to parse as date first
                const aDate = new Date(aValue);
                const bDate = new Date(bValue);
                
                if (!isNaN(aDate) && !isNaN(bDate)) {
                    return aDate - bDate;
                }
                
                // Otherwise sort as string
                return aValue.localeCompare(bValue);
            });
            
            // Reverse if already sorted
            if (rows[0].cells[columnIndex].classList.contains('sorted-asc')) {
                rows.reverse();
                rows.forEach(row => row.cells[columnIndex].classList.remove('sorted-asc', 'sorted-desc'));
                rows.forEach(row => row.cells[columnIndex].classList.add('sorted-desc'));
            } else {
                rows.forEach(row => row.cells[columnIndex].classList.remove('sorted-asc', 'sorted-desc'));
                rows.forEach(row => row.cells[columnIndex].classList.add('sorted-asc'));
            }
            
            // Re-append sorted rows
            rows.forEach(row => tbody.appendChild(row));
        }

        // Search functionality
        document.getElementById('patientFilter').addEventListener('input', function() {
            filterTable();
        });

        document.getElementById('medicationFilter').addEventListener('input', function() {
            filterTable();
        });

        function filterTable() {
            const patientFilter = document.getElementById('patientFilter').value.toLowerCase();
            const medicationFilter = document.getElementById('medicationFilter').value.toLowerCase();
            const rows = document.querySelectorAll('#medicationTable tbody tr');
            
            rows.forEach(row => {
                const patientName = row.cells[0].textContent.toLowerCase();
                const medicationName = row.cells[1].textContent.toLowerCase();
                
                const patientMatch = patientName.includes(patientFilter);
                const medicationMatch = medicationName.includes(medicationFilter);
                
                if (patientMatch && medicationMatch) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }
    </script>
}
