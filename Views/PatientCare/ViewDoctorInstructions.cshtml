@model IEnumerable<WardSystemProject.Models.DoctorInstruction>

@{
    ViewData["Title"] = "Doctor Instructions";
    var patient = ViewBag.Patient as Patient;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-info">
                <i class="bi bi-clipboard-check"></i> Doctor Instructions
            </h2>
            <h4 class="text-dark">@patient?.FullName</h4>
            <p class="text-muted">View all doctor instructions for this patient</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="ManageDoctorInstructions" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to All Instructions
            </a>
        </div>
    </div>

    <!-- Patient Information -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person"></i> Patient Information
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@patient?.FullName</dd>

                        <dt class="col-sm-4">Ward</dt>
                        <dd class="col-sm-8">
                            @if (patient?.Ward != null)
                            {
                                <span class="badge bg-primary">@patient.Ward.Name</span>
                            }
                            else
                            {
                                <span class="text-muted">Not assigned</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Bed</dt>
                        <dd class="col-sm-8">
                            @if (patient?.Bed != null)
                            {
                                <span class="badge bg-success">@patient.Bed.BedNumber</span>
                            }
                            else
                            {
                                <span class="text-muted">Not assigned</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Assigned Doctor</dt>
                        <dd class="col-sm-8">
                            @if (patient?.AssignedDoctor != null)
                            {
                                <span class="badge bg-info">@patient.AssignedDoctor.FullName</span>
                            }
                            else
                            {
                                <span class="text-muted">Not assigned</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-clipboard-check"></i> Instructions Summary
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <h3 class="text-primary">@Model.Count()</h3>
                            <small class="text-muted">Total Instructions</small>
                        </div>
                        <div class="col-md-4">
                            <h3 class="text-warning">@Model.Count(i => i.Status == "In Progress")</h3>
                            <small class="text-muted">In Progress</small>
                        </div>
                        <div class="col-md-4">
                            <h3 class="text-success">@Model.Count(i => i.Status == "Completed")</h3>
                            <small class="text-muted">Completed</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No doctor instructions found for this patient.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="bi bi-list-check"></i> All Instructions
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Doctor</th>
                                <th>Instruction Type</th>
                                <th>Priority</th>
                                <th>Status</th>
                                <th>Instructions</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderByDescending(i => i.InstructionDate))
                            {
                                <tr>
                                    <td>
                                        <strong>@item.Doctor?.FullName</strong>
                                        <br />
                                        <small class="text-muted">@item.Doctor?.Role</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@item.InstructionType</span>
                                    </td>
                                    <td>
                                        @if (item.Priority == "High")
                                        {
                                            <span class="badge bg-danger">@item.Priority</span>
                                        }
                                        else if (item.Priority == "Medium")
                                        {
                                            <span class="badge bg-warning">@item.Priority</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@item.Priority</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Status == "Completed")
                                        {
                                            <span class="badge bg-success">@item.Status</span>
                                        }
                                        else if (item.Status == "In Progress")
                                        {
                                            <span class="badge bg-warning">@item.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Instructions))
                                        {
                                            <div class="text-truncate" style="max-width: 300px;" title="@item.Instructions">
                                                @item.Instructions
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No instructions</span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@item.InstructionDate.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="DetailsDoctorInstruction" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-info" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="EditDoctorInstruction" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
