@model WardSystemProject.Models.VitalSign

@{
    ViewData["Title"] = "Edit Vital Sign";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Edit Vital Sign</h2>

    <form asp-action="EditVitalSign" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="PatientId" class="control-label text-dark fw-bold"></label>
            @Html.DropDownListFor(model => model.PatientId, (SelectList)ViewBag.PatientId, "Select Patient", new { @class = "form-control custom-select", required = "required" })
            <span asp-validation-for="PatientId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Temperature" class="control-label text-dark fw-bold"></label>
            <input asp-for="Temperature" class="form-control" type="number" step="0.1" min="30" max="45" required />
            <span asp-validation-for="Temperature" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Pulse" class="control-label text-dark fw-bold"></label>
            <input asp-for="Pulse" class="form-control" type="number" min="20" max="200" required />
            <span asp-validation-for="Pulse" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RecordDate" class="control-label text-dark fw-bold"></label>
            <input asp-for="RecordDate" class="form-control" type="datetime-local" required />
            <span asp-validation-for="RecordDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="ManageVitalSigns" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
