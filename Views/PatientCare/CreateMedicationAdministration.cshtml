@model WardSystemProject.Models.MedicationAdministration

@{
    ViewData["Title"] = "Administer Medication";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-warning">
                <i class="bi bi-capsule"></i> Administer Medication
            </h2>
            <p class="text-muted">Safely administer medications to patients</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-clipboard-plus"></i> Medication Administration Form
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateMedicationAdministration" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="PatientId" class="form-label fw-bold">Patient *</label>
                            <select asp-for="PatientId" class="form-select">
                                <option value="">Select a patient</option>
                            </select>
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MedicationId" class="form-label fw-bold">Medication *</label>
                            <select asp-for="MedicationId" class="form-select">
                                <option value="">Select a medication</option>
                            </select>
                            <span asp-validation-for="MedicationId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Dosage" class="form-label fw-bold">Dosage *</label>
                            <input asp-for="Dosage" class="form-control" placeholder="e.g., 500mg, 10ml, 1 tablet" />
                            <span asp-validation-for="Dosage" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AdministrationMethod" class="form-label fw-bold">Administration Method *</label>
                            <select asp-for="AdministrationMethod" class="form-select">
                                <option value="">Select method</option>
                                <option value="Oral">Oral</option>
                                <option value="Intravenous">Intravenous (IV)</option>
                                <option value="Intramuscular">Intramuscular (IM)</option>
                                <option value="Subcutaneous">Subcutaneous (SC)</option>
                                <option value="Topical">Topical</option>
                                <option value="Inhalation">Inhalation</option>
                                <option value="Rectal">Rectal</option>
                                <option value="Nasal">Nasal</option>
                            </select>
                            <span asp-validation-for="AdministrationMethod" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AdministrationDate" class="form-label fw-bold">Administration Date & Time *</label>
                            <input asp-for="AdministrationDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="AdministrationDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AdministeringStaffId" class="form-label fw-bold">Administering Staff *</label>
                            <select asp-for="AdministeringStaffId" class="form-select">
                                <option value="">Select staff member</option>
                            </select>
                            <span asp-validation-for="AdministeringStaffId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label fw-bold">Administration Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" 
                                      placeholder="Enter any special instructions, observations, or notes about this administration..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AdministeredBy" class="form-label fw-bold">Administered By *</label>
                            <input asp-for="AdministeredBy" class="form-control" value="@User.Identity?.Name" readonly />
                            <span asp-validation-for="AdministeredBy" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Administer Medication
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-shield-exclamation"></i> Safety Guidelines
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success"></i> Verify patient identity before administration
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success"></i> Check for allergies and contraindications
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success"></i> Confirm correct medication, dosage, and route
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success"></i> Document administration immediately
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success"></i> Monitor patient response post-administration
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
