@model WardSystemProject.Models.VitalSign

@{
    ViewData["Title"] = "Vital Sign Details";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Vital Sign Details</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Record #@Model.Id</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 text-dark fw-bold">@Html.DisplayNameFor(model => model.Patient.FirstName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Patient.FirstName)</dd>
                <dt class="col-sm-3 text-dark fw-bold">@Html.DisplayNameFor(model => model.Patient.LastName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Patient.LastName)</dd>
                <dt class="col-sm-3 text-dark fw-bold">@Html.DisplayNameFor(model => model.Temperature)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Temperature) °C</dd>
                <dt class="col-sm-3 text-dark fw-bold">@Html.DisplayNameFor(model => model.Pulse)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Pulse) bpm</dd>
                <dt class="col-sm-3 text-dark fw-bold">@Html.DisplayNameFor(model => model.RecordDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RecordDate)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="EditVitalSign" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="ManageVitalSigns" class="btn btn-secondary ms-2">Back to List</a>
    </div>
</div>
